@model EntityLayer.Concrete.Appointment
@{
    ViewData["Title"] = "UpdateAppointment";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Randevu Güncelleme </h1>


<form method="post">
    <div class="form-group">
        <label asp-for="AppointmentID">Randevu Id</label>
        <input asp-for="AppointmentID" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DoctorId">Doktor Id</label>
        <input asp-for="DoctorId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PatientId">Hasta Id</label>
        <input asp-for="PatientId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Date">Randevu Tarihi</label>
        <input asp-for="Date" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>