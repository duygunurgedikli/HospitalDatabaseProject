@model EntityLayer.Concrete.Doctor
@{
    ViewData["Title"] = "AddDoctor";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Yeni Doctor Oluşturma Sayfası</h1>
<form method="post">
    <div class="form-group">
        @Html.Label("Adı")
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        @Html.Label("Soyadı")
        <input type="text" asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        @Html.Label("Doktor Fotoğrafı")
        <input type="text" asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        @Html.Label("İletişim")
        <input type="text" asp-for="Concact" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Branş")
        <input type="text" asp-for="Branch" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Durum")
        <input type="text" asp-for="Status" class="form-control" />
    </div>
    <button class="btn btn-outline-primary">Oluştur</button>
</form>

