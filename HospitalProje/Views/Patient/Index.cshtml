@using EntityLayer.Concrete
@model List<Patient>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    int count = 0;
}
<style>
    img {
        border-radius: 50%;
    }
</style>
<h1>Hasta Listesi</h1>
<table class="table table-bordered">
    <tr>

        <th>#</th>
        <th>Görsel</th>
        <th>Hasta Adı-Soyadı</th>
        <th>Cinsiyet</th>
        <th>Yaş</th>
        <th>Adres</th>
        <th>Sil</th>
        <th>Güncelle</th>
      
     

    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.Image" height="50" width="50" /></td>
            <td>@item.Name @item.Surname</td>
            <td>@item.Gender</td>
            <td>@item.Years</td>
            <td>@item.Town @item.City</td>
            <td><a href="/Patient/DeletePatient/@item.PatientID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Patient/UpdatePatient/@item.PatientID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Patient/AddPatient/" class="btn btn-outline-primary">Yeni Hasta Girişi</a>

