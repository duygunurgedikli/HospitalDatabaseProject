@model EntityLayer.Concrete.Patient
@{
    ViewData["Title"] = "AddPatient";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Hasta Oluştur</h1>

<form method="post">
        <div class="form-group">
            @Html.Label("Adı")
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            @Html.Label("Soyadı")
            <input type="text" asp-for="Surname" class="form-control" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
       <div class="form-group">
        @Html.Label("Cinsiyet")
        <input type="text" asp-for="Gender" class="form-control" />
        </div>
        <div class="form-group">
            @Html.Label("Doktor Fotoğrafı")
            <input type="text" asp-for="Image" class="form-control" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
       
        <div class="form-group">
            @Html.Label("Doğum tarihi")
            <input type="text" asp-for="DateOfBirth" class="form-control" />
        </div>
        <div class="form-group">
            @Html.Label("Yaş")
            <input type="text" asp-for="Years" class="form-control" />
        </div>
        <div class="form-group">
        @Html.Label("İl")
        <input type="text" asp-for="City" class="form-control" />
        </div>
        <div class="form-group">
        @Html.Label("İlçe")
        <input type="text" asp-for="Town" class="form-control" />
        </div>
        <div class="form-group">
        @Html.Label("Mahalle")
        <input type="text" asp-for="Quarter" class="form-control" />
         </div>
        <button class="btn btn-outline-primary">Oluştur</button>
</form>

