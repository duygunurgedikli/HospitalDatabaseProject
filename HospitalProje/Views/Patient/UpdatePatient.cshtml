@model EntityLayer.Concrete.Patient
@{
    ViewData["Title"] = "UpdatePatient";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Hasta Güncelleme</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Name">Adı</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Surname">Soyadı</label>
        <input asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Gender">Cinsiyet</label>
        <input asp-for="Gender" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Image">Fotoğraf</label>
        <input asp-for="Image" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth">Doğum Tarihi</label>
        <input asp-for="DateOfBirth" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Years">Yaş</label>
        <input asp-for="Years" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="City">Şehir</label>
        <input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Town">İlçe</label>
        <input asp-for="Town" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Quarter">Mahalle</label>
        <input asp-for="Quarter" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>

